{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@interfaces/*": ["src/app/common/interfaces/*"],
      "@services/*": ["src/app/common/services/*"],
      "@pipes/*": ["src/app/common/pipes*"],
      "@interceptors/*": ["src/app/common/interceptors/*"],
      "@guards/*": ["src/app/common/guards/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
